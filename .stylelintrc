{
	"extends": "@martin-kolarik/stylelint-config",
	"ignoreFiles": [
		"src/public/less/bootstrap/**",
		"src/public/less/variables.less",
		"src/views/**"
	],
	"plugins": [
		"stylelint-no-unsupported-browser-features"
	],
	"rules": {
		"plugin/no-unsupported-browser-features": [
			true,
			{
				"ignore": [
					"css-appearance",
					"css-gradients",
					"css-hyphens",
					"css-resize",
					"css-sticky",
					"css3-cursors",
					"multicolumn",
					"user-select-none",
					"word-break",
					"wordwrap"
				]
			}
		]
	},
	"overrides": [
		{
			"files": [ "**/*.less" ],
			"customSyntax": "postcss-less"
		},
		{
			"files": [ "**/*.vue" ],
			"extends": [
				"stylelint-config-recommended-vue/scss",
				"@martin-kolarik/stylelint-config"
			]
		}
	]
}
